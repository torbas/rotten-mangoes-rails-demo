<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<%= form_tag("/movies/search", method: "get") do %>
  <%= label_tag(:title_or_director, "Title or Director:") %>
  <%= text_field_tag(:title_or_director) %>
  <%= label_tag(:runtime_in_minutes, "Running Time:") %>
  <%= select_tag(:runtime_in_minutes, options_for_select([["", ""], ["Under 90 mins", "short"], ["Between 90 - 120 mins", "medium"], ["Over 120 mins", "long"]])) %>
  <%= submit_tag("Search") %>
<% end %>
<hr>
<% @movies.each do |movie| %>
  <%= render partial: "movie", locals: {movie: movie} %>
<% end %>
